@model PetaPoco.Page<DAGKConnection.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Mainlayout.cshtml";
}
<div class="titleArea">
    <div class="wrapper">
        <div class="pageTitle">
            <h5>Sản phẩm</h5>
            <span>Quản lý sản phẩm</span>
        </div>

        <div class="horControlB menu_action">
            <ul>
                <li>
                    <a href="@Url.Action("Create","SanPhamAdmin")">
                        
                        <span>Thêm mới</span>
                    </a>
                </li>

                

            </ul>
        </div>

        <div class="clear"></div>
    </div>
</div>
<div class="line"></div>


<div class="wrapper" id="main_product">
    <div class="widget">

        <div class="title">
            <span class="titleIcon"><input type="checkbox" id="titleCheck" name="titleCheck" /></span>
            <h6>
                Danh sách sản phẩm
            </h6>
            <div class="num f12"><b>0</b></div>
        </div>

        <table cellpadding="0" cellspacing="0" width="100%" class="sTable mTable myTable" id="checkAll">

            <thead class="filter">
                <tr>
                    <td colspan="6">
                        <form class="list_filter form" action="index.php/admin/product.html" method="get">
                            <table cellpadding="0" cellspacing="0" width="80%">
                                <tbody>

                                 
                                </tbody>
                            </table>
                        </form>
                    </td>
                </tr>
            </thead>

            <thead>
                <tr>
                    <td style="width:21px;">STT</td>
                    <td style="width:60px;">Mã số</td>
                    <td>Tên</td>
                    <td>Giá</td>
                    <td style="width:75px;">Ngày tạo</td>
                    <td style="width:120px;">Hành động</td>
                </tr>
            </thead>

           
            <tfoot class="auto_check_pages">
                <tr >
                    <td colspan="6" rowspan="2">
                        <div class="list_action itemActions">
                            <div class="product-pagination text-center">
                                <nav>
                                    <ul class="pagination">
                                        <li>
                                            
                                                <span aria-hidden="true">«</span>
                                            
                                        </li>
                                        @for (int i = 1; i <= Model.TotalPages; i++)
            {
                                            <li>@Html.ActionLink(i.ToString(), "Index", new { page = i })</li>

                                        }



                                        <li>
                                            
                                                <span aria-hidden="true">»</span>
                                           
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>

                        <div class='pagination'>
                        </div>
                    </td>
                </tr>
            </tfoot>
          
            <tbody class="list_item">
@foreach (var item in Model.Items)
{
                <tr class='row_9'>
                    <td class="textC">@item.MaSP</td>

                    <td class="textC">@item.MaSP</td>

                    <td >
                        <div class="image_thumb">
                            <img src="~/img/@{@item.HinhAnh}.jpg" height="50" width="50">
                            <div class="clear"></div>
                        </div>

                        <a href="product/view/9.html" class="tipS" title="" target="_blank">
                            <b>@item.TenSP</b>
                        </a>

                        <div class="f11">
                            Tình Trạng tồn: @item.SoLuongTon				
                        </div>

                    </td>

                    <td class="textR">
                        @string.Format("{0:#,0 VNĐ}", @item.Gia)

                    </td>


                    <td class="textC">@item.NgayNhap</td>

                    <td class="option textC">
                        
                        <a href="admin/product/edit/9.html" title="Chỉnh sửa" class="tipS">
                            <img src="~/Asset/images/icons/color/edit.png" />
                        </a>

                        <a href="admin/product/del/9.html" title="Xóa" class="tipS verify_action">
                            <img src="~/Asset/images/icons/color/delete.png" />
                        </a>
                    </td>
                </tr>
                }
                
                
            </tbody>

        </table>
    </div>

</div>		<div class="clear mt30"></div>