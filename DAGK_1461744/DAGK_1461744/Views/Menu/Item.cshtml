
@model List<DAGKConnection.SanPham>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Sony";
}

<div class="product-carousel owl-carousel owl-theme owl-loaded owl-responsive-600">
    @foreach (var item in Model)
    {
        <div class="single-product">
            <div class="product-f-image">
                <img src="~/img/@{@item.HinhAnh}.jpg" alt="">
                <div class="product-hover">
                    <a href="#" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                    <a href="@Url.Action("Details","SanPham", new { id = @item.MaSP })" class="view-details-link"><i class="fa fa-link"></i> See details</a>
                </div>
            </div>

            <h2>

                @Html.ActionLink(item.TenSP, "Details", new { id = item.MaSP })
            </h2>
            <div class="product-carousel-price">
                <ins>Giá: @string.Format("{0:#,0 VNĐ}", @item.Gia)</ins>
            </div>
        </div>

    }
</div>





